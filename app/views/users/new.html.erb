<% err = @user.errors.full_messages %>

<%= form_with model: @user do |form| %>
    <h1>Create user</h1>

    <%= err unless err.empty?() %>
    <br><br>

    <%= form.label :username, "Your username" %>
    <%= form.text_field :username, placeholder: "joe" %>
    <br><br>

    <%= form.label :email, "Your email address" %>
    <%= form.email_field :email, placeholder: "joe@email.com" %>
    <br><br>

    <%= form.label :password, "Your password" %>
    <%= form.password_field :password %>
    <br><br>

    <%= form.submit "submit"%>
<%end%>